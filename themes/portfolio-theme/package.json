{
  "name": "hugo-theme-tailwindcss-starter",
  "version": "0.1.1",
  "description": "Starter files for a Hugo theme with Tailwindcss",
  "main": "index.js",
  "repository": "https://github.com/dirkolbrich/hugo-theme-tailwindcss-starter",
  "author": "dirkolbrich <github@dirkolbrich.de>",
  "license": "MIT",
  "scripts": {
    "dev:hugo": "env MODE=\"development\" hugo server --i18n-warnings --path-warnings --buildDrafts --disableFastRender --bind 0.0.0.0",
    "build:hugo": "rm -r public && env MODE=\"production\" hugo -e \"production\" --minify --debug --i18n-warnings --path-warnings",
    "gh:deploy": "gh-pages -d ../../public -r 'https://github.com/diegosanchezp/diegosanchezp.github.io.git' -b master"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.2.0",
    "autoprefixer": "^9.8.0",
    "gh-pages": "^3.1.0",
    "postcss": "^7.0.32",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "tailwindcss": "^1.4.6"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.1",
    "dialog-polyfill": "^0.5.1",
    "vanilla-ripplejs": "^1.0.6"
  }
}
